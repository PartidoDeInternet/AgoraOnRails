<article class="proposal" id="user_<%= user.id %>">
  
  <section class="proposal-content">
    <h2 class="proposal-title">
      <%= link_to user.name, user %>
      <small><i class="fa fa-envelope-o"></i>  <%= user.email %></small>
    </h2>
    <p class="proposal_type">
      A votado sobre <strong><%= user.votes.count %></strong> propuestas
      <span class="proposed_at">something else</span>
    </p>

  </section>

    <section class="voters">
      <% if current_spokesman?(user) %>
        <%= link_to user, :class => "fire-spokesman-large" do %>
          <strong>Destituir</strong>
          a mi representante
        <% end %>
      <% else %>
      <%= link_to user, :class => "btn btn--gamma btn--soft btn--primary btn-smart" do %>
        <strong>Elige!</strong>
        <%= who_has_delegated?(user) %>
      <% end %>
    </section>
    <% end %>
</article>